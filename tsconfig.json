{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "deploy/**/*",
    "types/",
    "webapp/src/**/*"
  ],
  // "ts-node": {
  //   "files": true,
  //   "transpileOnly": true,
  //   "esm": true,
  //   "compilerOptions": {
  //     "module": "ES2020",
  //     "target": "ES2020"
  //   }
  // },
}