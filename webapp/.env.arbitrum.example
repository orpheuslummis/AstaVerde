# Arbitrum webapp configuration (default: Arbitrum Sepolia QA)

# Network selection
NEXT_PUBLIC_CHAIN_SELECTION=arbitrum_sepolia

# Contract addresses (required)
# Replace with deployed addresses for the selected chain
NEXT_PUBLIC_ASTAVERDE_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d

# Phase 2 vault (optional for vault UI)
NEXT_PUBLIC_ECOSTABILIZER_ADDRESS=0x...
NEXT_PUBLIC_SCC_ADDRESS=0x...

# Public API keys
# Prefer using a limited Alchemy key for client-side
NEXT_PUBLIC_ALCHEMY_API_KEY=
# Optional: WalletConnect (client-exposed)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# IPFS
NEXT_PUBLIC_IPFS_GATEWAY_URL=https://w3s.link/ipfs/

# USDC config
NEXT_PUBLIC_USDC_DECIMALS=6

# Copy to webapp/.env.arbitrum and fill values.
# For Arbitrum One, change NEXT_PUBLIC_CHAIN_SELECTION=arbitrum_mainnet and set
# NEXT_PUBLIC_USDC_ADDRESS=0xaf88d065e77c8cC2239327C5EDb3A432268e5831.
