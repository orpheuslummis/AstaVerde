# AstaVerde webapp environment (untracked)
# Copy to webapp/.env.local and fill in your values.
#
# Start Arbitrum Sepolia dev:
#   npm run dev:sepolia   # runs webapp on http://localhost:3002

# Network selection
NEXT_PUBLIC_CHAIN_SELECTION=arbitrum_sepolia

# Contract addresses (Arbitrum Sepolia)
NEXT_PUBLIC_ASTAVERDE_ADDRESS=0x0000000000000000000000000000000000000000
# Native USDC on Arbitrum Sepolia (not USDC.e)
NEXT_PUBLIC_USDC_ADDRESS=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d

# Phase 2 vault (optional for vault UI)
NEXT_PUBLIC_ECOSTABILIZER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SCC_ADDRESS=0x0000000000000000000000000000000000000000

# RPC (choose one)
# Recommended: set the full HTTPS RPC URL you want the browser to use.
NEXT_PUBLIC_ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/your_alchemy_key
# Optional fallback: if NEXT_PUBLIC_ARBITRUM_SEPOLIA_RPC_URL is not set, the app uses
# https://arb-sepolia.g.alchemy.com/v2/${NEXT_PUBLIC_ALCHEMY_API_KEY}
NEXT_PUBLIC_ALCHEMY_API_KEY=

# WalletConnect (optional; if blank, only Injected connector is enabled)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# IPFS
NEXT_PUBLIC_IPFS_GATEWAY_URL=https://w3s.link/ipfs/

# USDC config
NEXT_PUBLIC_USDC_DECIMALS=6

