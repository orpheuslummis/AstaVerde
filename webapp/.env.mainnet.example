# Base Mainnet webapp configuration

# Network selection
NEXT_PUBLIC_CHAIN_SELECTION=base_mainnet

# Contract addresses (required)
NEXT_PUBLIC_ASTAVERDE_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x...

# Phase 2 vault (optional for vault UI)
NEXT_PUBLIC_ECOSTABILIZER_ADDRESS=0x...
NEXT_PUBLIC_SCC_ADDRESS=0x...

# Public API keys (client-exposed)
NEXT_PUBLIC_ALCHEMY_API_KEY=
# Optional: WalletConnect
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# IPFS
NEXT_PUBLIC_IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# USDC config
NEXT_PUBLIC_USDC_DECIMALS=6

# Copy to webapp/.env.mainnet and fill values.
