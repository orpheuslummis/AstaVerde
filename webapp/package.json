{
    "name": "webapp",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:setup": "npx playwright install chromium",
        "test:wallet": "cypress run --config-file e2e/synpress/cypress.config.js",
        "test:wallet:open": "cypress open --config-file e2e/synpress/cypress.config.js",
        "test:wallet:connect": "cypress run --config-file e2e/synpress/cypress.config.js --spec 'e2e/synpress/specs/wallet-connect.cy.js'",
        "test:wallet:purchase": "cypress run --config-file e2e/synpress/cypress.config.js --spec 'e2e/synpress/specs/purchase.cy.js'",
        "test:wallet:vault": "cypress run --config-file e2e/synpress/cypress.config.js --spec 'e2e/synpress/specs/vault.cy.js'",
        "test:all": "npm run test:e2e && npm run test:wallet"
    },
    "dependencies": {
        "@heroicons/react": "2.1.5",
        "@radix-ui/react-slider": "1.2.1",
        "@tanstack/react-query": "5.59.0",
        "@wagmi/core": "^2.13.4",
        "@web3-storage/w3up-client": "16.2.0",
        "abitype": "1.0.6",
        "class-variance-authority": "0.7.0",
        "clsx": "2.1.1",
        "connectkit": "1.8.2",
        "encoding": "0.1.13",
        "ethers": "6.13.3",
        "lucide-react": "0.447.0",
        "next": "^14.2.31",
        "pino-pretty": "11.2.2",
        "react": "^18.3.1",
        "react-dom": "18.3.1",
        "react-error-boundary": "4.0.13",
        "react-hot-toast": "^2.4.1",
        "react-intersection-observer": "9.13.1",
        "tailwind-merge": "2.5.2",
        "tailwindcss-animate": "1.0.7",
        "viem": "^2.33.3",
        "wagmi": "^2.12.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^20.9.31",
        "@types/react": "18.3.11",
        "@types/react-dom": "18.3.0",
        "autoprefixer": "^10.4.16",
        "dotenv": "^16.4.5",
